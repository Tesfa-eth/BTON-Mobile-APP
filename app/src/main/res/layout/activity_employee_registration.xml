<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DhallMenu"
    android:padding="40dp"
    android:background="#945F4F">
    <ImageView
        android:id="@+id/btnicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bennicon"/>

    <EditText
        android:id="@+id/edtTxtFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnicon"
        android:layout_marginTop="20dp"
        android:background="@color/primary_light"
        android:hint="First Name"
        android:inputType="text"
        android:minHeight="30dp"/>

    <EditText
        android:id="@+id/edtTxtLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtFirstName"
        android:layout_marginTop="10dp"
        android:background="@color/primary_light"
        android:hint="Last name"
        android:inputType="text"
        android:minHeight="30dp" />
    <!--Todo: add a spinner here for department-->

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTxtLastName"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary_light"
        android:drawableRight="@drawable/ic_person_sign_in"
        android:text="Search Employee"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/regListView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSearch"
        android:layout_marginTop="15dp"
        android:divider="@color/primary"
        android:dividerHeight="13dp" />

</RelativeLayout>