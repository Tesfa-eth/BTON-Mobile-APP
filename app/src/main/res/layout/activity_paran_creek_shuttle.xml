<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="5dp"
    tools:context=".ParanCreekShuttle">

    <ImageView
        android:id="@+id/btnicon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/bennicon" />

    <TextView
        android:id="@+id/localShuttleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/primary_light"
        android:text="Paran creek Shuttle"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/localShuttleTitle"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noticeTitle"
                android:layout_marginTop="15dp"
                android:textColor="@color/gold"
                android:text="Important information"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/noticeParanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noticeTitle"
                android:text="Updates coming soon"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/scheduleTitle"
                android:layout_below="@+id/noticeParanText"
                android:layout_marginTop="15dp"
                android:textColor="@color/gold"
                android:text="Schedule"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/scheduleParanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scheduleTitle"
                android:text="Local van Schedule"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>