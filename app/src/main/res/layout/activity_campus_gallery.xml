<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusGallery"
    android:background="#945F4F">

    <!--main title, background image would be nice-->
    <TextView
        android:id="@+id/campusGallery"
        android:layout_width="750dp"
        android:layout_height="150dp"
        android:background="@drawable/bennington_background"
        android:layout_centerHorizontal="true"
        android:text="Campus Gallery"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:padding="0dp"/>



    <!--Scrollview containing all scrollable contents-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campusGallery"
        android:id="@+id/scrollView"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/vapaCardViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#8E9AA5"
                android:text="VAPA"
                android:textSize="40dp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDown"
                android:layout_alignRight="@+id/vapaCardViewText"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />
            <androidx.cardview.widget.CardView
                android:id="@+id/vapaCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/vapaCardViewText"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#945F4F"
                    >

                    <!--add a drop down button here-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/minimize2"
                        >
                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/newImage1"
                        android:src="@drawable/bennington_background" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/newImage2"
                            android:layout_below="@+id/newImage1"
                            android:src="@drawable/bennington_background" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/newImage3"
                            android:layout_below="@id/newImage2"
                            android:src="@drawable/bennington_background" />

                    </RelativeLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <!--Third card view-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/capaCardViewText"
                android:text="CAPA"
                android:textSize="40dp"
                android:layout_marginTop="10dp"
                android:background="#8E9AA5"
                android:layout_below="@+id/vapaCardView"
                />

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDownCapa"
                android:layout_below="@id/vapaCardView"
                android:layout_alignRight="@+id/capaCardViewText"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/capaCardView"
                android:layout_below="@+id/capaCardViewText"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#945F4F"
                    android:id="@+id/expandableView11"
                    >

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:id="@+id/newestImage1"
                        android:src="@drawable/bennington_background" />
                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/newestImage1"
                        android:src="@drawable/bennington_background" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>



        </RelativeLayout>
        <!--General view cardView-->
    </ScrollView>




</RelativeLayout>