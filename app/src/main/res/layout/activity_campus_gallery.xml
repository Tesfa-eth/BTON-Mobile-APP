<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusGallery">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campusGallery"
        android:text="Campus Gallery"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:background="#CC8999"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimize"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/campusGallery"
        android:layout_alignRight="@+id/generalView"
        android:id="@+id/minimize"
        android:layout_marginLeft="300dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Campus View"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/campusGallery"
        android:id="@+id/generalView"
        android:background="#8E9AA5"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generalView"
        android:id="@+id/scrollView"
        android:background="#945F4F"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exampleImages"
            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:id="@+id/image1"
                android:layout_marginTop="20dp"
                android:src="@drawable/bennington_background" />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/image1"
                android:id="@+id/image2"
                android:src="@drawable/bennington_background" />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/image2"
                android:id="@+id/image3"
                android:src="@drawable/bennington_background" />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/image3"
                android:id="@+id/image4"
                android:src="@drawable/bennington_background" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>