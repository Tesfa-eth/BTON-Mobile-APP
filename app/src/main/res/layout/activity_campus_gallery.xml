<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusGallery"
    android:backgroundTint="@color/white"
    android:background="#945F4F">

    <!--main title, background image would be nice-->
    <TextView
        android:id="@+id/campusGallery"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bennington_background"
        android:text="Campus Gallery"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <Button
        android:id="@+id/sampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/campusGallery"
        android:text="display"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/imageListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:layout_below="@+id/sampleButton"
        android:divider="@color/white"
        />


</RelativeLayout>