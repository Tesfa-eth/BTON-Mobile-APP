<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactHealthCenter"
    android:background="#945F4F"
    android:padding="20dp">

    <TextView
        android:id="@+id/contactHCtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Contact the Health Center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/contactHCmailto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactHCtitle"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:text=" mail to:   stesfatsionmulugeta@gmail.com "
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/contactHCsubject"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/contactHCmailto"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:hint="subject" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/contactHCbody"
        android:layout_below="@+id/contactHCsubject"
        android:layout_marginTop="20dp"
        android:hint="main body goes here"
        android:background="@drawable/custom_input"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSendEmail"
        android:layout_below="@+id/contactHCbody"
        android:background="@drawable/contact_hc_button_apply"
        android:layout_marginTop="20dp"
        android:text="send"
        />

</RelativeLayout>