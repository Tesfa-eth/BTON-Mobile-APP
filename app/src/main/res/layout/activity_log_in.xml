<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="40dp"
    android:background="#945F4F">

    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnicon"
        android:minHeight="48dp"
        android:hint="username"
        android:inputType="text"
        android:background="@drawable/color"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edtTxtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="48dp"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:inputType="textPassword"
        android:background="@drawable/color"
        android:layout_below="@+id/edtTxtName"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:layout_centerInParent="true"
        android:id="@+id/btnsign_in"
        android:layout_below="@+id/edtTxtDate"
        android:layout_marginTop="20dp"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_centerInParent="true"
        android:id="@+id/btnToRegister"
        android:layout_below="@+id/btnsign_in"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnicon"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bennicon"/>


</RelativeLayout>